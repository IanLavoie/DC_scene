<div class="wrapper">
  <div id="profilePhoto">
    <% if @photo %>
      <%= link_to image_tag(@photo.image.url, class: 'media-object'), @photo.image.url, class: 'profile-photo', target: '_blank' %>
    <% else %>
      <%= image_tag("dcflag_heart.png", :alt => "Profile Photo", class: 'defaultPhoto') %>
    <% end %>
    <p class="underPhoto"><%= @user[:age] %> yrs | <%= @user[:gender] %></p>
    <p class="underPhoto">Joined DsCene: <%= @user[:created_at] %></p>
  </div>
  <div id="profileInfo">
    <h3><%= @user[:fullname] %></h3>
    <% if @user[:country] %>
      <p>From <%= @user[:country] %><p>
    <% end %>
    <% if @user[:us_state] != "Not Applicable" %>
      <p>From <%= @user[:us_state] %><p>
    <% end %>
    <h4>About Me</h4>
    <p><%= @user[:bio] %></p>
      <% if @hobby %>
        <p>Favorite Book:    <%= @hobby[:reading] %></p>
        <p>Favorite sport:   <%= @hobby[:gym] %></p>
        <p>Favorite movie:   <%= @hobby[:movie] %></p>
        <p>Favorite music genre:   <%= @hobby[:dancing] %></p>
        <p>Favorite outdoor activity:    <%= @hobby[:outside] %></p>
        <p>Favorite food:    <%= @hobby[:food] %></p>
        <p>Favorite drink:   <%= @hobby[:drinks] %></p>
        <p>Favorite museum in DC:    <%= @hobby[:museums] %></p>
      <% end %>
  </div>
</div>
<div class="links">

  <%= link_to 'Back', users_path %> -- --
  <% if @user[:id] == current_user[:id] %>
    <%= link_to 'Add interests', new_hobby_path %> -- --
    <%= link_to 'Add a new Photo', new_photo_path %> -- --
    <%= link_to 'Edit Profile', edit_user_path(@user) %> -- --
    <%= link_to 'Delete Profile', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</div>
