<div class="wrapper">
  <div id="profilePhoto">
    <% if @photo %>
      <%= link_to image_tag(@photo.image.url, class: 'media-object'), @photo.image.url, class: 'profile-photo', target: '_blank' %>
    <% else %>
      <%= image_tag("dcflag_heart.png", :alt => "Profile Photo", class: 'defaultPhoto') %>
    <% end %>
  </div>
  <div id="profileinfo">
    <p>Age:<br>  <%= @user[:age] %><p><br>
    <p>Gender:<br>  <%= @user[:gender] %><p><br>
    <p>From:<br>  <%= @user[:country] %><p><br>
    <p>About Me:<br>  <%= @user[:bio] %><p>
      <h3>See my interests:</h3><br>
      <p><%= link_to 'Show', hobby_path(:id) %></p>

  </div>
</div>
<div class="links">

  <%= link_to 'Back', users_path %> -- --
  <% if @user[:id] == current_user[:id] %>
    <%= link_to 'Add interests', new_hobby_path %> -- --
    <%= link_to 'Add a new Photo', new_photo_path %> -- --
    <%= link_to 'Edit Profile', edit_user_registration_path(@user) %> -- --
    <%= link_to 'Delete Profile', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</div>
