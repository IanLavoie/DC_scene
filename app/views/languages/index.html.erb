<h2>Admin: View All Languages</h2>
  <%= link_to 'Add a New Language', new_language_path, class: "linkButton" %>
<br> <br>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language[:language] %></td>
        <td><%= link_to 'Edit', edit_language_path(language), class: "linkButton" %></td>
        <td><%= link_to 'Delete', language, method: :delete, data: { confirm: 'Are you sure?' }, class: "linkButton" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
