

<h2>Admin: All Neighborhoods</h2>
<%= link_to "Add a New Neighborhood", new_neighborhood_path, class: "linkButton" %>
<br> <br>
<table>
  <thead>
    <tr>
      <th>Neighborhood</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood[:name] %></td>
        <td><%= neighborhood[:lat] %> &#176;</td>
        <td><%= neighborhood[:lng] %> &#176;</td>
        <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood), class: "linkButton" %></td>
        <td><%= link_to 'Delete', neighborhood, method: :delete, data: { confirm: 'Are you sure?' }, class: "linkButton" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
